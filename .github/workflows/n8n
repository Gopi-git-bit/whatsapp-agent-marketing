version: '3.8'

services:
  db:
    image: postgres:16-alpine
    restart: always
    environment:
      - POSTGRES_USER=n8n_user
      - POSTGRES_PASSWORD=n8n_password # Change this!
      - POSTGRES_DB=n8n_db
    volumes:
      - postgres_data:/var/lib/postgresql/data

  n8n:
    image: n8nio/n8n:latest
    restart: always
    ports:
      - "5678:5678"
    environment:
      # Database Config
      - DB_TYPE=postgresdb
      - DB_POSTGRESDB_HOST=db
      - DB_POSTGRESDB_PORT=5432
      - DB_POSTGRESDB_DATABASE=n8n_db
      - DB_POSTGRESDB_USER=n8n_user
      - DB_POSTGRESDB_PASSWORD=n8n_password # Match the DB password above
      # SSL & Domain Config (from previous steps)
      - N8N_HOST=n8n.zippylogitech.com
      - N8N_PROTOCOL=https
      - WEBHOOK_URL=https://n8n.zippylogitech.com/
      # AI & API Config
      - OPENAI_API_KEY=sk-your-key-here
      - WHAPI_API_TOKEN=your-whapi-token-here
    links:
      - db
    volumes:
      - n8n_data:/home/node/.n8n
    depends_on:
      - db

volumes:
  n8n_data:
  postgres_data:
